
cd ~/apps/java

# Download OpenJDK 17 using curl
curl -L -o openjdk-17.tar.gz https://download.java.net/java/GA/jdk17.0.1/2a2082e5a09d4267845be086888add4f/12/GPL/openjdk-17.0.1_linux-x64_bin.tar.gz

# Extract
tar -xzf openjdk-17.tar.gz

# Find the extracted directory name and create symlink
JDK_DIR=$(tar -tzf openjdk-17.tar.gz | head -1 | cut -f1 -d"/")
ln -s "$JDK_DIR" current

# Add to PATH
echo 'export JAVA_HOME=~/apps/java/current' >> ~/.bashrc
echo 'export PATH=$JAVA_HOME/bin:$PATH' >> ~/.bashrc

# Reload bashrc
source ~/.bashrc

# Verify installation
java -version
javac -version



# Install NVM
curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.0/install.sh | bash

# Reload shell configuration
source ~/.bashrc

# Install Node.js
nvm install 18  # or your preferred version
nvm use 18
nvm alias default 18

# Verify installation
node --version
npm --version



cd ~/apps/nodejs

# Download Node.js using curl
curl -o node-v18.17.0-linux-x64.tar.xz https://nodejs.org/dist/v18.17.0/node-v18.17.0-linux-x64.tar.xz

# Extract
tar -xf node-v18.17.0-linux-x64.tar.xz

# Create symlink
ln -s node-v18.17.0-linux-x64 current

# Add to PATH
echo 'export PATH=~/apps/nodejs/current/bin:$PATH' >> ~/.bashrc

# Reload bashrc
source ~/.bashrc

# Verify installation
node --version
npm --version


cd ~/apps

# Download Maven using curl
curl -o apache-maven-3.9.4-bin.tar.gz https://dlcdn.apache.org/maven/maven-3/3.9.4/binaries/apache-maven-3.9.4-bin.tar.gz

# Extract
tar -xzf apache-maven-3.9.4-bin.tar.gz

# Create symlink
ln -s apache-maven-3.9.4 maven

# Add to PATH
echo 'export PATH=~/apps/maven/bin:$PATH' >> ~/.bashrc

# Reload bashrc
source ~/.bashrc

# Verify installation
mvn --version


