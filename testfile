{ echo "HOSTNAME: $(hostname)"; uname -a; } > uname.txt
{ echo "HOSTNAME: $(hostname)"; hostnamectl; } > hostnamectl.txt
{ echo "HOSTNAME: $(hostname)"; cat /etc/redhat-release; } > redhat-release.txt
{ echo "HOSTNAME: $(hostname)"; rpm -qa; } > installed_packages.txt
{ echo "HOSTNAME: $(hostname)"; lsmod; } > kernel_modules.txt
{ echo "HOSTNAME: $(hostname)"; sysctl -a; } > sysctl.txt
{ echo "HOSTNAME: $(hostname)"; ulimit -a; } > ulimit.txt

{ echo "HOSTNAME: $(hostname)"; systemctl list-unit-files; } > systemd_unit_files.txt
{ echo "HOSTNAME: $(hostname)"; systemctl list-units --all; } > systemd_units.txt
{ echo "HOSTNAME: $(hostname)"; systemctl list-timers --all; } > systemd_timers.txt

{ echo "HOSTNAME: $(hostname)"; crontab -l; } > root_crontab.txt
{ echo "HOSTNAME: $(hostname)"; ip addr show; } > ip_addr.txt
{ echo "HOSTNAME: $(hostname)"; ip route show; } > ip_route.txt
{ echo "HOSTNAME: $(hostname)"; nmcli device show; } > nmcli_device.txt
{ echo "HOSTNAME: $(hostname)"; firewall-cmd --list-all; } > firewall_rules.txt

{ echo "HOSTNAME: $(hostname)"; cat /etc/fstab; } > fstab.txt
{ echo "HOSTNAME: $(hostname)"; cat /etc/hosts; } > hosts.txt
{ echo "HOSTNAME: $(hostname)"; cat /etc/hostname; } > hostname.txt
{ echo "HOSTNAME: $(hostname)"; cat /etc/sysctl.conf; } > sysctl.conf.txt
{ echo "HOSTNAME: $(hostname)"; cat /etc/security/limits.conf; } > limits.conf.txt
{ echo "HOSTNAME: $(hostname)"; cat /etc/login.defs; } > login_defs.txt
