-- Create indexes for performance
CREATE INDEX IDX_AUDIT_LOGS_USERNAME ON AUDIT_USER.AUDIT_LOGS(USERNAME);
CREATE INDEX IDX_AUDIT_LOGS_CREATED_AT ON AUDIT_USER.AUDIT_LOGS(CREATED_AT);
CREATE INDEX IDX_AUDIT_LOGS_ENDPOINT ON AUDIT_USER.AUDIT_LOGS(API_ENDPOINT);
CREATE INDEX IDX_AUDIT_LOGS_STATUS ON AUDIT_USER.AUDIT_LOGS(HTTP_STATUS);
CREATE INDEX IDX_AUDIT_LOGS_CORRELATION ON AUDIT_USER.AUDIT_LOGS(CORRELATION_ID);
CREATE INDEX IDX_AUDIT_LOGS_ACTION_TYPE ON AUDIT_USER.AUDIT_LOGS(ACTION_TYPE);
CREATE INDEX IDX_AUDIT_LOGS_MODULE ON AUDIT_USER.AUDIT_LOGS(MODULE_NAME);
