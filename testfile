# Get top 10 largest directories in current location
Get-ChildItem | Where-Object { $_.PSIsContainer } | ForEach-Object {
    $size = (Get-ChildItem $_.FullName -Recurse -File | Measure-Object -Property Length -Sum).Sum
    [PSCustomObject]@{
        Folder = $_.Name
        Size_MB = [math]::Round($size / 1MB, 2)
        Size_GB = [math]::Round($size / 1GB, 2)
    }
} | Sort-Object Size_MB -Descending | Select-Object -First 10
